@model List<Category >
 @{
    int count = 0;
} 
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Category</h4>
                <a asp-action="Create" class="btn btn-success">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Product count
                                </th>
                                <th>
                                    Created at
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Category category in Model)
                            {
                               count++; 
                                <tr>
                                    <td >
                                        @count 
                                    </td>
                                    <td>
                                       @category.Name
                                    </td>
                                    <td>
                                       @category.Products.Count
                                    </td>
                                    <td>
                                        @category.CreatedAt.ToString("d MMMM yyy HH:mm")
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i></a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i></a>
                                        <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                    </td>
                                </tr>
                            }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
