@using OnlineShopping.ViewModels
@model LoginVM
<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card w-50">
        <div class="card-body">
            <h4 class="card-title text-center mb-4">Login</h4>
            <form method="post" class="forms-sample">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UsernameOrEmail">Username or Email</label>
                    <input asp-for="UsernameOrEmail" class="form-control" placeholder="Username or Email">
                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="IsPersistant">Remember me</label>
                    <input asp-for="IsPersistant">
                </div>
                <button type="submit" class="btn btn-success me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
</div>

